---
import Button from "./Button.astro";

const navItems = [
    { label: "Startseite", href: "/" },
    { label: "Ãœber Uns", href: "/ueber-uns" },
    { label: "Fotobox", href: "/fotobox" },
    { label: "Aktionen", href: "/aktionen" },
    { label: "Business", href: "/business" },
];

const galerieItems = [
    { label: "Hochzeiten", href: "/galerie/hochzeiten" },
    { label: "Events", href: "/galerie/events" },
    { label: "Geburtstage", href: "/galerie/geburtstage" },
    { label: "Alle Fotos", href: "/galerie" },
    { label: "2 Personen", href: "/portfolio/2-personen" },
];
---

<nav class="flex justify-around items-center border-b border-black py-5">
    <div>LOGO</div>
    <div class="flex items-center gap-5">
        <ul class="flex gap-5 items-center">
            {
                navItems.map((item) => (
                    <li>
                        <a href={item.href} class="hover:opacity-70">
                            {item.label}
                        </a>
                    </li>
                ))
            }
            <li class="dropdown-wrapper">
                <button
                    id="galerie-button"
                    aria-expanded="false"
                    aria-haspopup="true"
                    class="inline-flex items-center gap-x-1 hover:opacity-70 cursor-pointer"
                >
                    Galerie
                    <svg
                        viewBox="0 0 20 20"
                        fill="currentColor"
                        aria-hidden="true"
                        class="size-4 transition-transform"
                        id="galerie-icon"
                    >
                        <path
                            d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z"
                            clip-rule="evenodd"
                            fill-rule="evenodd"></path>
                    </svg>
                </button>

                <div
                    id="galerie-menu"
                    role="menu"
                    class="dropdown-menu w-56 rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5"
                >
                    <div class="py-1">
                        {
                            galerieItems.map((item) => (
                                <a
                                    href={item.href}
                                    role="menuitem"
                                    class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900"
                                >
                                    {item.label}
                                </a>
                            ))
                        }
                    </div>
                </div>
            </li>
        </ul>
        <div>
            <Button label="Gutschein sichern" />
            <Button label="Kontaktieren uns" />
        </div>
    </div>
</nav>

<style>
    .dropdown-menu {
        display: none;
        position: absolute;
        top: calc(100% + 0.5rem);
        right: 0;
        opacity: 0;
        transform: scale(0.95);
        transition:
            opacity 100ms ease-out,
            transform 100ms ease-out;
        z-index: 50;
    }

    .dropdown-menu.show {
        display: block;
        opacity: 1;
        transform: scale(1);
    }

    .dropdown-wrapper {
        position: relative;
    }

    #galerie-button {
        background: none;
        border: none;
        padding: 0;
        font: inherit;
        color: inherit;
    }

    #galerie-icon.rotated {
        transform: rotate(180deg);
    }
</style>

<script>
    const button = document.getElementById("galerie-button");
    const menu = document.getElementById("galerie-menu");
    const icon = document.getElementById("galerie-icon");

    if (button && menu && icon) {
        const toggleMenu = (show: boolean) => {
            if (show) {
                menu.classList.add("show");
                icon.classList.add("rotated");
                button.setAttribute("aria-expanded", "true");
            } else {
                menu.classList.remove("show");
                icon.classList.remove("rotated");
                button.setAttribute("aria-expanded", "false");
            }
        };

        button.addEventListener("click", (e) => {
            e.stopPropagation();
            const isOpen = menu.classList.contains("show");
            toggleMenu(!isOpen);
        });

        document.addEventListener("click", (e) => {
            if (
                !menu.contains(e.target as Node) &&
                !button.contains(e.target as Node)
            ) {
                toggleMenu(false);
            }
        });

        document.addEventListener("keydown", (e) => {
            if (e.key === "Escape") {
                toggleMenu(false);
            }
        });
    }
</script>
